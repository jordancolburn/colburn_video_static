doctype
- var HOMEPAGE = false;
html
  head
    title Colburn Video | Louisville, Ky Based Wedding Videographer
    
    meta(name="description" content="Colburn Video is a husband and wife team dedicated to producing high quality films for weddings, companies, sports, missions and more. Colburn video is based in Louisville, Kentucky.")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/main.css')
    link(rel='stylesheet', href='/static/bootstrap/css/bootstrap.min.css')
    script(src='/static/jquery/jquery.min.js')
    script(src='/static/bootstrap/js/bootstrap.min.js')
    if environment == "production"
      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-42007053-1', 'auto');
        ga('send', 'pageview');

  body.fullscreen-video
    video(playsinline autoplay muted loop poster="/img/reel_still.jpg").bg-video
      source(src="/img/reel.mp4" type="video/mp4")
    .navbar-wrapper
      .container.outer-image-container
        div(class="navbar navbar-inverse navbar-static-top")
            .container
                .navbar-header
                    button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/")
                     .row
                      img(alt="Brand" src="/img/colburnvideo_logo_low.png")
                      span.inline Colburn Video
                div(class="collapse navbar-collapse")
                    ul(class="nav navbar-nav")
                      li(class=current.source=='index'?'active':undefined)
                          a(href="/") HOME
                      each blogpost in public.page._data
                        li(class=current.source=='#{blogpost.slug}'?'active':undefined)
                          a(href="/page/#{blogpost.slug}") #{blogpost.title}
    div
      .container
        .row
          .col-md-2
          .col-md-8
            != yield
          .col-md-2
    br